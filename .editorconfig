root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.rs]
max_line_length = 100
indent_size = 4
indent_style = tab

[*.toml]
indent_size = 4
indent_style = space

[*.json]
indent_size = 2
indent_style = space

[*.py]
max_line_length = 88
indent_size = 4
indent_style = space

[Justfile]
indent_style = tab
indent_size = 4
